@using System.Web.Optimization;
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Magazin Bloom</title>
    @Styles.Render("~/bundles/style/css")

    <!-- Adaugă bundle-ul pentru stilurile Bootstrap -->
    @Styles.Render("~/bundles/bootstrap/css")
</head>
<body>


    @Html.Partial("_Navbar")
    @Html.Partial("_Sidebar")

    <div class="product-images">
        <img src="~/brandlogo/image1.png" alt="">
        <img src="~/brandlogo/image2.png" alt="">
        <img src="~/brandlogo/image3.jpg" alt="">
        <img src="~/brandlogo/image4.jpg" alt="">
        <img src="~/brandlogo/image5.png" alt="">
        <img src="~/brandlogo/image6.jpg" alt="">
    </div>


    <div class="yellow-bar">
        <div class="brand-container">
            <div class="brand">
                <img src="~/brandlogo/brand1.png" alt="Brand 1">
            </div>
            <div class="brand">
                <img src="~/brandlogo/brand2.png" alt="Brand 2">
            </div>
            <div class="brand">
                <img src="~/brandlogo/brand3.png" alt="Brand 3">
            </div>
            <div class="brand">
                <img src="~/brandlogo/brand4.png" alt="Brand 4">
            </div>
            <div class="brand">
                <img src="~/brandlogo/brand5.png" alt="Brand 5">
            </div>
            <div class="brand">
                <img src="~/brandlogo/brand6.png" alt="Brand 6">
            </div>
        </div>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/script/js")
    @Scripts.Render("~/bundles/bootstrap/js")
    @Html.Partial("_Footer")

    <!-- Adaugă bundle-ul pentru scripturile Bootstrap -->
   
</body>

</html>

